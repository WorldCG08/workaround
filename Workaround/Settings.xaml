<Window x:Class="Workaround.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workaround"
        mc:Ignorable="d"
        Title="Settings" Height="271" Width="302">
    <Grid Margin="10,10,10,9">
        <StackPanel Margin="0,0,0,10">
            <Label Content="Clip Limit" Height="27" Width="265"/>
            <TextBox x:Name="settings_ClipLimit" Text="10000" TextWrapping="Wrap" Width="265" Height="29" HorizontalAlignment="Center" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
            <Label Content="WSL path (absolute path - ...system32\wsl.exe)" Width="265"/>
            <TextBox x:Name="settings_WslPath" TextWrapping="Wrap" Width="265" Height="32" VerticalContentAlignment="Center"/>
            <Button Content="Apply" Click="Button_Click" Margin="0,10,0,0" Height="31" Width="265"/>
        </StackPanel>
    </Grid>
</Window>
