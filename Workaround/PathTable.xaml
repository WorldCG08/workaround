<Window x:Class="Workaround.PathTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workaround"
        mc:Ignorable="d"
        Title="PathTable" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="PathList" Margin="10,46,10,10" MouseDoubleClick="pathList_MouseDoubleClick"/>
        <Button Content="Add from clip" HorizontalAlignment="Left" Height="31" Margin="10,10,0,0" VerticalAlignment="Top" Width="108" Click="ButtonPathAdd"/>
        <Button Content="Remove" HorizontalAlignment="Left" Height="31" Margin="186,10,0,0" VerticalAlignment="Top" Width="134" Click="ButtonPathRemove"/>

    </Grid>
</Window>
